<%= image_tag 'background-yellow-square.png', class: "banner-bg"  %>

<div class="container col-6 mt-5 mb-5">
  <div class="form-title mb-3">
      <h2 class="text-center">Specify your discounts</h2>
  </div>
  <div class="form-container pt-3">
    <div class="circles text-center">
      <i class="far fa-circle"></i>
      <i class="far fa-circle"></i>
      <i class="fas fa-circle"></i>
      <hr>
      <h4>STEP 3</h4>


        <div>
          <p> You have a total of <%= @listing.stock %> units </p>
          <p> The min price is <%= @listing.min_price %>€ and the max price is <%= @listing.max_price %>€ Would you like to add a discount in the middle ? </p>
    </div>
      <%= simple_form_for [ @listing, @discount] do |f|%>
          <div class="d-flex align-items-end mt-5">
            <div class="mx-auto px-5"><%= f.input :quantity, placeholder: 'Number of units' %></div>
            <div class=" mx-auto px-5"><%= f.input :price%></div>
          </div>
        <div class="button d-flex justify-content-center pb-5">
          <button href="#" class="btn-gradient mt-5">Create discount</button>
        </div>
    <% end %>
  </div>
</div>
